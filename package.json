{
  "private": true,
  "name": "@azu/delete-tweets",
  "version": "1.0.0",
  "description": "Delete tweets and 日本語の補助ツール",
  "keywords": [
    "japaneses",
    "twitter"
  ],
  "homepage": "https://github.com/azu/delete-tweets",
  "bugs": {
    "url": "https://github.com/azu/delete-tweets/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/azu/delete-tweets.git"
  },
  "license": "MIT",
  "author": "azu",
  "sideEffects": false,
  "type": "module",
  "main": "lib/delete-tweets.js",
  "module": "module/delete-tweets.js",
  "types": "lib/delete-tweets.d.ts",
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "files": [
    "bin/",
    "lib/",
    "module/",
    "src/"
  ],
  "scripts": {
    "bootstrap": "download-negaposi-dict && node bootstrap.js",
    "import-twitter-archives": "node --loader ts-node/esm ./scripts/import-twitter-archives.ts",
    "detect": "node --loader ts-node/esm ./scripts/detect.ts",
    "delete-tweets": "node --loader ts-node/esm ./scripts/delete-tweets.ts",
    "test-detect": "node --loader ts-node/esm ./scripts/test-detect.ts",
    "test": "mocha",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,css}\"",
    "prepare": "git config --local core.hooksPath .githooks",
    "build": "tsc -p .",
    "watch": "tsc -p . --watch",
    "clean": "rimraf lib/ module/",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,css}": [
      "prettier --write"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "none"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.1",
    "@types/mocha": "^8.2.2",
    "@types/node": "^15.12.2",
    "@types/split2": "^3.2.0",
    "lint-staged": "^11.0.0",
    "mocha": "^9.0.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "ts-node-test-register": "^10.0.0",
    "typescript": "^4.3.2"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@textlint/kernel": "^12.0.0",
    "@textlint/module-interop": "^12.0.0",
    "@textlint/regexp-string-matcher": "^1.1.0",
    "@textlint/textlint-plugin-text": "^12.0.0",
    "comlink": "^4.3.1",
    "dayjs": "^1.10.5",
    "dotenv": "^10.0.0",
    "js-yaml": "^4.1.0",
    "kuromojin": "^3.0.0",
    "meow": "^10.0.1",
    "negaposi-analyzer-ja": "^1.0.1",
    "npm": "^6.14.13",
    "ora": "^5.4.1",
    "p-queue": "^7.1.0",
    "piscina": "^3.1.0",
    "split2": "^3.2.2",
    "textlint-filter-rule-allowlist": "^3.0.0",
    "textlint-rule-ja-no-inappropriate-words": "^2.0.0",
    "textlint-rule-no-hoso-kinshi-yogo": "^1.3.2",
    "twitter-api-v2": "^1.1.0"
  }
}
